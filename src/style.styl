color-white = #efefef
color-black = #1f1f1f
color-red = #ff4747
body
  font-family "proxima-nova", Helvetica Neue, Arial, sans-serif
  background-color color-white
  color color-black
  font-size 14px
  padding 0
  margin 0
.landing
  font-weight 600
  p
    margin 0
  a
    color: color-red
    text-decoration none
    &:hover
      color: #DDE9FF
  .main
    box-sizing border-box
    padding-top 50px
    padding-bottom 50px
    max-width 600px
    margin auto
    text-align center
    .greeting
      box-sizing border-box
      margin auto
      max-width 440px
      position relative
      .awticonsig
        float top
        width 100%
      .header
        background-color color-black
        color color-white
        font-size 2em
        font-weight 600
        padding-left 10px
        padding-right 10px
      .top
        position absolute
        top 9%
        left 8%
      .bot
        position absolute
        bottom 6%
        right 5%
  .content
    background-color color-red
    position relative
    width 100%
    padding-bottom 0.1px
    .panel
      box-sizing border-box
      font-size 2.1em
      line-height 1.7em
      position relative
      max-width 650px
      margin-left auto
      margin-right auto
      margin-bottom 20px
      background-color color-black
      color color-white
      font-weight 600
      padding 40px
      padding-left 60px
      padding-right 60px
      z-index 2
      &.panel-image
        padding 0
        max-width 600px
        margin-top -20px
        margin-bottom 0px
        img
          display block
          width 100%
    .color-offset
      width 100%
      height 70px
      background-color color-white
      position absolute
      top 0
      z-index 1

  footer
    text-align center
    background-color color-black
    color color-white
    margin 0
    padding 10px
    p
      font-weight 200
      padding-bottom 20px
    .socials
      margin 12px
      font-size 22px
      a
        color color-red
        text-decoration none

@media only screen and (max-width : 480px)
  .landing
    .content
      padding 0
      .panel
        font-size 1.4em
        padding-left 20px
        padding-right 20px
        margin 0
        &.panel-image
          margin 0

// Clearfix
.cf:before,
.cf:after {
  content: " ";
  display: table;
}

.cf:after {
  clear: both;
}
