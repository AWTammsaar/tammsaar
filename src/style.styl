color-white = #fafafa
color-black = #191919
color-red = #ff4747
body
  font-family 'Source Code Pro', "proxima-nova", Helvetica Neue, Arial, sans-serif
  background-color color-white
  color color-black
  font-size 14px
  padding 0
  margin 0

a
  color: color-red
  text-decoration none
  &:hover
    color: #DDE9FF

.content
  margin auto
  margin-top 0
  max-width 1200px
  display grid
  grid-template-columns 1fr

.signature
  box-sizing border-box
  margin 31px 0
  width 100%
  margin-left auto
  margin-right auto
  text-align center

.signature-container
  box-sizing border-box
  margin auto
  max-width 330px
  position relative
  .awticonsig
    float top
    width 100%
  .header
    background-color color-black
    color color-white
    font-size 1.5em
    font-weight 600
    padding-left 10px
    padding-right 10px
  .top
    position absolute
    top 9%
    left 8%
  .bot
    position absolute
    bottom 6%
    right 5%

.about-me
  margin-top 20px

p
  font-size 14px
  line-height 20px
  font-weight 600
  color color-black
  padding 5px 15px
  margin 5px 0
h3
  font-size 14px
  display inline-block
  font-family 'Source Code Pro', "proxima-nova", Helvetica Neue, Arial, sans-serif
  font-weight 600
  color color-white
  padding 5px 8px
  margin-top 10px
  margin-left 15px
  margin-bottom 0
  background-color color-black
  box-sizing border-box

.panel-image
  box-sizing border-box
  margin-bottom 40px
  img
    margin-left auto
    margin-right auto
    display block
    width 100%

footer
  text-align center
  color color-black
  margin 0
  padding 10px
  p
    font-weight 200
    padding-bottom 20px

.socials
  margin 12px
  font-size 22px

@media only screen and (min-width: 600px)
  .signature
    margin-bottom 0
  .content
    margin-top 20px
  .panel-image
    padding 40px
    margin-bottom 0
    img
      width 75%
@media only screen and (min-width: 960px)
  .signature
    margin 31px 0
  .content
    grid-template-columns 3fr 4fr
    grid-column-gap 10px
    margin-top 40px
  .panel-image
    padding 40px
    img
      width 75%

// Clearfix
.cf:before,
.cf:after
  content: " "
  display: table

.cf:after
  clear: both
